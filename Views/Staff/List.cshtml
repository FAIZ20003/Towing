@model IEnumerable<Proffessional.Models.Staff>

@{
    ViewData["Title"] = "Staff List";
}

<!DOCTYPE html>
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: #f3f4f6;
            color: #111827;
        }

        .app {
            display: flex;
            height: 100vh;
        }

        /* SIDEBAR */
        .sidebar {
            width: 240px;
            min-width: 240px;
            background: #1f2937;
            color: #e5e7eb;
            display: flex;
            flex-direction: column;
        }

        .logo {
            height: 60px;
            display: flex;
            align-items: center;
            padding: 0 20px;
            font-size: 18px;
            font-weight: 700;
            background: #111827;
        }

        .sidebar nav a {
            display: block;
            padding: 12px 20px;
            color: #d1d5db;
            text-decoration: none;
            font-size: 14px;
        }

            .sidebar nav a:hover,
            .sidebar nav a.active {
                background: #2563eb;
                color: #fff;
            }

        /* MAIN */
        .main {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .header {
            height: 60px;
            background: #fff;
            border-bottom: 1px solid #e5e7eb;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
        }

            .header h2 {
                font-size: 18px;
                font-weight: 600;
            }

        .content {
            padding: 24px;
            overflow-y: auto;
        }

        /* TABLE */
        table {
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0,0,0,.05);
        }

        th, td {
            padding: 12px 14px;
            border-bottom: 1px solid #e5e7eb;
            font-size: 14px;
            text-align: left;
        }

        th {
            background: #f9fafb;
            font-weight: 600;
            color: #374151;
        }

        tr:hover {
            background: #f3f4f6;
        }

        /* STATUS BADGE */
        .badge {
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 600;
        }

        .badge-active {
            background: #dcfce7;
            color: #166534;
        }

        .badge-inactive {
            background: #fee2e2;
            color: #991b1b;
        }

        .action a {
            color: #2563eb;
            font-weight: 600;
            text-decoration: none;
        }

        .btn-add {
            background: #2563eb;
            color: #fff;
            padding: 8px 14px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 14px;
        }
    </style>
</head>

<body>

    <div class="app">

        <!-- SIDEBAR -->
        <aside class="sidebar">
            <div class="logo">🚚 Towing</div>
            <nav>
                <a href="/Dashboard/Index">Dashboard</a>
                <a href="/Case/List">Case List</a>
                <a class="active">Staff</a>
                <a href="/Staff/Create">Add Staff</a>
            </nav>
        </aside>

        <!-- MAIN -->
        <div class="main">

            <div class="header">
                <h2>👤 Staff List</h2>
                <a href="/Staff/Create" class="btn-add">➕ Add Staff</a>
            </div>

            <div class="content">

                <table>
                    <thead>
                        <tr>
                            <th>Staff Name</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.StaffName</td>
                                <td>@s.PhoneNumber</td>
                                <td>
                                    <span class="badge @(s.IsActive ? "badge-active" : "badge-inactive")">
                                        @(s.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="action">
                                    <a href="/Staff/Edit?id=@s.StaffId">Edit</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    @if (TempData["PopupMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: '@TempData["PopupType"]',
                title: 'Notification',
                text: '@TempData["PopupMessage"]',
                confirmButtonColor: '#2563eb'
            });
        </script>
    }

</body>
</html>
